@{
  Layout = "_Layout";
}

@using Theatre.Models;

<h1> Genres </h1>

@if (@Model.Count == 0 )
{
  <h3>No genres have been added yet! </h3>
}

@foreach (Genre genre in Model)
{
  <li>@Html.ActionLink($"{genre.GenreName}", "Details", new { id = genre.GenreId})</li>
}

<button>@Html.ActionLink("Add new genre", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>