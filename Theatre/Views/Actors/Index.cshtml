@using Theatre.Models;

<h1>Actors</h1>

@if (@Model.Count == 0)
{
  <h3>No actors have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Actor actor in Model)
  {
    <li>@Html.ActionLink($"{actor.ActorName}", "Details", new { id = actor.ActorId })</li>
  }
  </ul>
}

<button>@Html.ActionLink("Add new Actor", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>