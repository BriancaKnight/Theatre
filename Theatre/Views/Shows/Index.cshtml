
@using Theatre.Models;

<h1>Shows</h1>

@if (@Model.Count == 0)
{
  <h3>No shows have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Show show in Model)
  {
    <li>@Html.ActionLink($"{show.ShowName}", "Details", new { id = show.ShowId })</li>
  }
  </ul>
}

<button>@Html.ActionLink("Add new Show", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>